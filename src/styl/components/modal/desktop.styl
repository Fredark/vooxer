body.modal--on
  overflow hidden

.modal-button
  cursor pointer

.modal
  align-items center
  display flex
  justify-content center
  top 0
  height 100%
  left 0
  position fixed
  background-color rgba(0, 0, 0, .5)
  opacity 0
  visibility hidden
  width 100%
  z-index -1
  transition all 150ms ease-in-out

  &.modal--on
    opacity 1
    visibility visible
    z-index 300

  &__content
    background-color white
    height 90vh
    max-width 694px
    max-height 624px
    padding 45px 20px
    position relative
    width 90vw

  &__desc
    height calc(100% - 81px)
    margin 0 auto
    overflow auto
    max-width 525px

  &__close
    cursor pointer
    position absolute
    right 20px
    top 20px
    color #505050
    font-size 25px
    font-weight 700
    text-transform uppercase
    transition all 150ms ease-in-out

    &:hover
      color red

  &__title
    color $cor01
    font-size 36px
    font-weight 400
    letter-spacing -.1px
    margin-bottom 45px
    text-align center
    text-transform uppercase

    strong
      font-weight 700

.form-budget
  &__group
    display flex
    flex-flow column wrap
    max-height 250px

    > *
      margin 10px
      width calc(50% - 20px)

  &__input
    background-color white
    background-position right 10px center
    background-repeat no-repeat
    border 1px solid #cfcfcf
    border-radius 5px
    color #606060
    font-size 14px
    font-weight 400
    letter-spacing -.1px
    line-height 18px
    height 42px
    padding 12px 40px 12px 15px
    transition all 150ms ease-in-out


    &--when
      background-image url('data:image/png;base64,')

      &:focus
        background-image none
        padding-right 15px

    &--where
      background-image url('data:image/png;base64,')

    &--area
      background-image url('data:image/png;base64,')

    &--mesure
      background-image url('data:image/png;base64,')

    &::placeholder
      color #606060
      font-size 14px
      font-weight 400
      letter-spacing -.1px
      line-height 18px

    &:hover
      border-color $cor01

    &:focus
      border-color $cor01
      color #000
      outline none

  &__checks
    border 1px solid #cfcfcf
    border-radius 5px
    padding 6px 15px

  &__label
    color #606060
    display block
    font-size 14px
    font-weight 400
    letter-spacing -.1px
    line-height 18px
    margin-bottom 6px

  &__textarea
    background-color white
    border 1px solid #cfcfcf
    border-radius 5px
    color #606060
    font-size 14px
    font-weight 400
    flex 1 1 auto
    height 112px
    letter-spacing -.1px
    line-height 18px
    margin 10px
    padding 15px
    transition all 150ms ease-in-out
    width calc(100% - 20px)

    &:hover
      border-color $cor01

    &:focus
      border-color $cor01
      color #000
      outline none

  &__button
    background-color $cor03
    border 0 none
    border-radius 5px
    color white
    cursor pointer
    display block
    font-size 18px
    font-weight 400
    line-height 38px
    margin 10px auto 0
    text-align center
    text-transform uppercase
    width calc(100% - 20px)
    transition all 150ms ease-in-out

    &:hover
      background-color $cor04


.checks-list
  display flex
  flex-flow row wrap

  &__item
    align-items center
    display flex
    flex 0 0 80px
    user-select none
    margin 2px 0

  &__label
    color #606060
    font-size 12px
    font-weight 400
    transition all 150ms ease-in-out

    &:hover
      color $cor01

  &__check
    margin 3px 5px 3px 0

    &:checked + .checks-list__label
      color $cor01
