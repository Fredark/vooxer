body.catalog-category-view
  .banner--nojs img.d_img
    margin 0 auto

  .filters__filter
    background transparent

    .a--0current
      display block

      & + .ul--1
        display block

  .toolbar .amount
    visibility hidden



.col2-left-layout
  > .main
    display flex

.col-left
  flex 0 0 260px
  margin-right 30px
  max-width none
  padding 0

.col-main
  flex 1 1 auto

.filters
  .title
    display none

.filters__filter
  border 0 none
  box-shadow none
  padding 0

  &:hover
    box-shadow none

  .li--0
    margin-bottom 20px

    &:last-child
      margin-bottom 0

  .a--0current
  .a--0
    color #9a9a9a
    display block
    font-size 14px
    font-weight 700
    line-height 16px
    padding 10px 0
    transition all 150ms ease-in-out

    &:hover
      color $cor01


  .count
    display none

  .ul--1
    margin 10px 0 0 0
    max-height 200px
    overflow auto
    padding 0 0 10px

  .label
    color #9a9a9a
    font-size 14px
    font-weight 700
    line-height 16px
    transition all 150ms ease-in-out

  .a--1:hover
  .a--0:hover
    .label
    .count
      color $cor01

.filters__name
  border-bottom 1px solid #ebebeb
  color #494949
  font-size 14px
  font-weight 700
  line-height 45px
  margin 0 0 10px
  padding 0 15px
  text-transform uppercase


.filters__filter .li--0:not(:last-child)
  margin 0

.filters__swatches
  margin-top 15px

  .a--0
  .a--0current
    padding 0

.toolbar
  display none !important

  .view-mode
  .limiter
    display none

.filtered__filter
  font-size 13px
  max-width none

.filters__filtered
  .btn--close
    margin -1px -1px -1px 0
    padding 8px 10px

.page-title h1
  font-size 27px
  line-height 1
  letter-spacing .5px

  small
    font-size 27px
    line-height 1

.toolbar

  .sort-by label
  .amount
    color black
    font-size 12px
    font-weight 400
    text-transform uppercase
    letter-spacing .5px
    opacity 1

.category-title
  display none

.category-description
  border 0 none
  padding 0
  color: #959595;
  font-size: 13px;
  font-weight: 400;
  letter-spacing: .49px;
  line-height: 17px;
  text-align: justify;

.col-main
  .category-description
    margin-bottom 20px

.toolbar .sort-by select
  color #868686
  font-size 12px
  font-weight 400
  letter-spacing .5px


.products__item
  flex 1 1 200px
  margin-bottom 65px
  max-width 245px
  min-width 245px

.ias-noneleft
  display none !important

.filters__filter
  background-color transparent

  .ul--0
  ol
    padding 0 15px

.col-main .category-description
  display none !important

.wrapper
  .search-title
    h1
    h1 small
      font-size 16px
