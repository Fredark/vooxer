.wrapper-container
  padding-top 251px

.header-container
  background-color white
  box-shadow 0 3px 4px 0 rgba(34, 31, 31, .2)
  left 0
  top 0
  position fixed
  width 100%


.header
  box-shadow none
  display block
  padding 0
  position static

.header-lane
  border-bottom 1px solid #ebebeb

.header-lane__center
  align-items center
  display flex

.logo
  flex 0 0 180px
  margin-right 83px

.header-lane__right
  flex 1 1 auto

.header-lane__top
  align-items center
  border-bottom 1px dashed #363636
  display flex
  height 60px
  justify-content space-between
  transition all 150ms ease-in-out

.header
  .loginout
    align-items center
    display flex
    justify-content space-between
    flex 2 1 auto

  .search
    border 1px solid #e1e1e1
    margin 0

.icon--user
  &:before
    content svg-inline(user)
    margin-right 13px

.welcome-message
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.user-links
.user-links__link
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.user-links__link
  &:hover
    text-decoration underline

.user-links__link--first
  margin-right 4px

.user-links__link--second
  margin-left 4px

.phones
  flex 2 1 auto
  justify-content flex-end

.phones
.phones__item
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.phones__item
  font-size 15px
  margin-left 4px

.header-lane__bottom
  align-items center
  display flex
  padding 20px 0

.icon--phone
  &:before
    content svg-inline(phone)
    margin-right 15px

.search__label
  border-right 1px solid #e3e3e3
  color $cor01
  font-size 13px
  font-weight 500
  letter-spacing .3px
  line-height 25px
  margin 0
  text-align center
  text-transform lowercase
  width 70px

.search
  .search__input
    border 0 none
    box-shadow none
    border-radius 0
    color #999
    font-size 13px
    font-weight 400
    height 38px
    letter-spacing .3px
    line-height 18px
    padding 10px 20px

.search__button
  background-color transparent
  border 0 none
  border-radius 0
  box-shadow none
  padding 0
  text-align center
  width 43px

  &:hover
    background-color transparent

  span
    display inline-block

.icon--search
  &:before
    content svg-inline(search)

.search__filter
  display none

.header
  .mycart
    height auto
    margin-left 20px

.icon--cart
  &:before
    content svg-inline(cart)
    margin-right 15px

.cart__info
  color #212121
  font-size 15px
  font-weight 500
  letter-spacing .29px
  transition all 150ms ease-in-out

.mycart

  &:hover
    .cart__info
      color $cor01

    .mycart__content
      display none

.ruler-list
  align-items center
  display flex
  height 48px

.ruler-list__item
  align-items center
  display flex
  flex 1 1 auto

  &:last-child
    flex 0 0 auto

  [class*="icon--"]
    &:before
      margin-right 7px

.ruler-list__title
  color $cor01
  font-size 12px
  font-weight 600
  letter-spacing .5px
  margin-right 10px
  text-transform uppercase
  white-space nowrap

.ruler-list__desc
  .std
    color #9e9e9e
    font-size 11px
    font-weight 500
    letter-spacing .19px
    line-height 14px


.icon--shipping
  &:before
    content svg-inline(shipping)

.icon--cards
  &:before
    content svg-inline(cards)

.icon--safe
  &:before
    content svg-inline(safe)

.icon--whatsapp
  &:before
    content svg-inline(whatsapp)


.menu-lane
  background-color $cor01

.header-container .categories:not(.categories--mini)
  margin 0
  padding 0

.categories
  background-color transparent

  .li--0
    border-right 1px solid $cor02

    &:first-child
      border-left 1px solid $cor02

    &:hover
      .a--0
        background-color white

        span
          color $cor01

  .a--0
    align-items center
    background-color $cor01
    display flex
    flex-flow column nowrap
    height 62px
    justify-content center
    transition all 150ms ease-in-out


    span
      flex 0 0 auto

    &:before
      flex 0 0 auto
      margin-bottom 6px

    &.cama:before
      content svg-inline(cama)

    &.mesa:before
      content svg-inline(mesa)

    &.banho:before
      content svg-inline(banho)

    &.infantil:before
      content svg-inline(infantil)

    &.personagens:before
      content svg-inline(personagens)

    &.decorac-o:before
      content svg-inline(decoracao)

    &.utensilios:before
      content svg-inline(utilidades-domesticas)

    &.vendas-no-atacado:before
      content svg-inline(vendas-no-atacado)

    span
      color white
      font-size 13px
      font-weight 500
      letter-spacing .5px
      text-transform uppercase
      transition all 150ms ease-in-out

.categories--justify
  .categories__all
    flex 0 0 70px

    &:hover
      .icon--menu:before
        content: svg-inline(menu2)

  .box--1
    display none

  .a--0
    align-items center
    display flex

.icon--menu
  &:before
    content svg-inline(menu)
    transition all 150ms ease-in-out