.wrapper-container
  padding-top 223px

.header-container
  background-color white
  box-shadow none
  left 0
  top 0
  position fixed
  width 100%

  &:after
    background-color rgba(0, 0, 0, .7)
    content ''
    left 0
    height 100%
    top 0
    transition all 150ms ease-in-out
    opacity 0
    visibility hidden
    position fixed
    width 100%
    z-index -1

  @media (min-width 1201px)
    &.mask--on:after
      opacity 1
      visibility visible
      z-index 200


.header
  background-color white
  box-shadow none
  display block
  padding 0
  position relative
  z-index 300

.header-lane
  background-color white
  position relative
  z-index 400

  body.moving--down &
    border-color $cor01
    box-shadow 0 0 3px rgba(0, 0, 0, .2)

.header-lane__right
  flex 1 1 auto

.header-lane__top
  align-items stretch
  border-bottom 1px solid #dfdfdf
  display flex
  height 50px
  overflow hidden
  transition all 150ms ease-in-out

  body.moving &
    border 0 none
    height 0

.top__center
  align-items center
  display flex
  justify-content space-between

.user-links
  display flex
  flex 0 0 auto

.header
  .loginout
    align-items center
    display flex
    justify-content space-between
    flex 2 1 auto

  .search
    border 1px solid #e1e1e1
    margin 0
    transition all 150ms ease-in-out

    &:hover
      border-color $cor01

    &.search--on
      border-color $cor01

      .search__label
        border-color $cor01

.icon--user
  &:before
    content svg-inline(user)
    line-height 0
    margin-right 10px

.welcome-message
  color #484848
  font-size 14px
  font-weight 600

  .welcome-message__name
  strong
    color $cor01
    font-weight 700
    font-style italic

.user-links__item
  border-left 1px solid #dfdfdf
  height 16px
  padding 0 15px

  &:last-child
    padding-right 0

  &:nth-child(2)
    .user-links__link
      color $cor02


.user-links
.user-links__link
  color #484848
  font-size 14px
  font-weight 400

.user-links__link
  &:hover
    text-decoration underline

.user-links__link--phone
  color $cor01
  font-size 14px
  font-weight 900
  font-style italic
  text-transform uppercase
  letter-spacing .25px
  display inline-flex
  align-items center


  &:hover
    text-decoration none

  span
    margin-left 10px

.user-links__link--first
  margin-right 4px

.user-links__link--second
  margin-left 4px

.phones
  flex 2 1 auto
  justify-content flex-end

.phones
.phones__item
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.phones__item
  font-size 15px
  margin-left 4px

.header-lane__bottom
  align-items center
  background-color $cor01
  display flex
  padding 28px 0

  body.moving &
    padding 15px 0

.icon--phone
  &:before
    content svg-inline(phone)
    margin-right 5px

.search__label
  display none

.search
  background-color white
  .search__input
    border 0 none
    box-shadow none
    border-radius 0
    color #999
    font-size 13px
    font-weight 400
    height 54px
    letter-spacing .3px
    line-height 18px
    padding 11px 20px
    transition all 150ms ease-in-out

    &:focus
      color #666

    &::placeholder
      color #999
      font-size 13px
      font-weight 400
      letter-spacing .3px
      line-height 18px

.header
  .center
    padding 0 20px

.search__button
  background-color transparent
  border 0 none
  border-left 1px solid $cor01
  border-radius 0
  box-shadow none
  line-height 0
  padding 3px 0
  text-align center
  width 85px

  &:hover
    background-color transparent
    border 0 none
    border-left 1px solid $cor01

  span
    display inline-block

.icon--search
  &:before
    line-height 0
    content url('data:image/png;base64,')

.search__filter
  display none

.header
  .mycart
    height auto

  .logo
    margin-right 60px
    flex 0 0 auto

.icon--cart
  &:before
    content svg-inline(cart)
    margin-right 10px

.bottom__center
  align-items flex-end
  display flex

.header-offer
  flex 0 0 auto
  margin-left 15px
  position relative

  .products__list .flex-fix
    display none

  &:hover
    .header-offer__dropdown
      opacity 1
      visibility visible

  .products__list
    margin 0

  .products__item
    margin 0
    padding 0
    min-width 0

  .products__case
    padding 10px 0
    box-shadow none

.header-offer__title
  align-items center
  background-color $cor01
  color white
  display inline-flex
  font-size 14px
  line-height 42px
  text-align center
  justify-content center
  text-transform uppercase
  width 208px

  &:after
    border-top 4px solid white
    border-left 5px solid transparent
    border-right 5px solid transparent
    content ''
    flex 0 0 auto
    margin-left 7px

.header-offer__dropdown
  box-shadow 3px 3px 0 0 rgba(96, 96, 96, .38)
  position absolute
  top 100%
  right 0
  opacity 0
  visibility hidden

.menu-lane
  border-bottom 1px solid #dfdfdf
  border-top 1px solid #dfdfdf
  margin-top 0
  position relative
  transition all 150ms ease-in-out
  z-index 200

  body.moving--down &
    margin-top -61px

.header-container .categories:not(.categories--mini)
  margin 0
  padding 0

.categories
  background-color transparent

  .li--0
    flex 0 0 auto
    text-align center

    &:hover
      .a--0
        background-color white
        border-bottom 2px solid $cor01

        span
          color $cor01

  .a--0
    border-bottom 2px solid transparent
    display inline-block
    padding 5px 0
    transition all 150ms ease-in-out
    width auto

    span
      flex 0 0 auto

    span
      color $cor01
      font-size 14px
      font-weight 600
      letter-spacing .25px
      text-transform uppercase
      transition all 150ms ease-in-out

.categories--justify
  position relative

  .ul--0
    justify-content space-between
    height 59px
    padding-right 20px

  .categories__all.li--0
    flex 0 0 50px

    .box--1
      left 1px !important
      height auto
      max-height none
      padding 0
      top 56px
      right 1px !important

    .all-ul--1
      display none

    .all-ul--0
      column-count 4
      display block
      height auto
      max-height none
      padding 24px 40px 30px
      width 100%

    .all-li--0
      display inline-block
      padding 0

  .li--0
    position relative

    .box--1
      align-items flex-start
      background-color white
      border 0 none
      box-shadow none
      display flex
      height auto
      left 0
      right auto !important
      top 28px
      padding 30px 35px

      .ul--1
        flex 0 0 auto
        margin 0
        width auto

      .li--1
      .all-li--0
        flex 0 0 auto
        margin-right 50px
        width 150px

      .a--1
      .all-a--0
        padding 0

        span
          color #959595
          display block
          font-size 13px
          font-weight 500
          letter-spacing .5px
          line-height 15px
          padding 17px 0
          text-align left
          text-transform uppercase
          transition all 150ms ease-in-out

          &:hover
            color $cor01

.categories__products
  .title
    display none


.categories__block
  border 0 none
  flex 0 0 auto
  margin 0
  order 0
  padding 0

.icon--menu
  &:before
    content svg-inline(menu)
    transition all 150ms ease-in-out

.header-lane__mobile
  display none

.categories__products, .categories__block
  border 0 none

.all-ul--1
  display none

.categories .products__case
  height auto

.categories__products .products__item, .categories__products.carrossel
  margin 0

.categories--justify .li--0.promo--products .box--1
  padding-bottom 0
