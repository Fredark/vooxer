.header-lane
  position fixed
  z-index 100
  top 0
  left 0
  width 100%
  transition all 150ms ease-in-out

  body.header--on &
    background-color white
    box-shadow 0 0 5px 0 rgba(0, 0, 0, .3)

  &__center
    align-items center
    display flex
    justify-content space-between
    padding 40px 0
    transition all 150ms ease-in-out

    body.header--on &
      padding 20px 0

.logo
  display block
  width 180px

  img
    max-width 100%

.user-list
  display flex
  align-items center

  &__item
    margin-right 15px

    &:last-child
      margin-right 0

.buy-button
  background-color $cor03
  color white
  display block
  font-size 14px
  font-weight 400
  line-height 35px
  text-align center
  text-decoration none
  width 180px
  transition all 150ms ease-in-out

  &:hover
    background-color $cor04

.menu
  position relative
  user-select none

  &--on
    .menu__button
      &:before
        transform rotate(45deg);
        margin-top 0
        left 5px

      &:after
        transform rotate(-45deg);
        margin-top 0
        left 5px

    .menu__stick
      opacity 0

    .menu__list
      opacity 1
      visibility visible
      z-index 100

  &__button
    background-color $cor01
    cursor pointer
    display block
    position relative
    height 40px
    width 40px

    &:before
    &:after
      background-color white
      content ''
      height 2px
      border-radius 2px
      width calc(100% - 10px)
      left 50%
      top 50%
      margin-top -7px
      position absolute
      transform translate(-50%, -50%)
      transition all 150ms ease-in-out

    &:after
      margin-top 7px

  &__stick
    background-color white
    height 2px
    border-radius 2px
    width calc(100% - 10px)
    left 50%
    opacity 1
    top 50%
    position absolute
    transform translate(-50%, -50%)
    transition all 150ms ease-in-out

  &__list
    background-color $cor01
    display block
    padding 30px
    position absolute
    right 0
    top 100%
    width 235px
    z-index -1
    opacity 0
    visibility hidden
    transition all 150ms ease-in-out

  &__item
    display block
    margin-bottom 10px

    &:last-child
      margin-bottom 0

  &__link
    color white
    font-size 17px
    font-weight 400
    text-decoration none

.banner-home
  background url('/img/banner-home.jpg') no-repeat center top
  background-attachment fixed
  background-size 100%

  &__center
    display flex
    flex-wrap wrap
    align-items center
    height 90vh

  &__env
    max-width 410px

  &__title
    color #272728
    font-size 35px
    font-weight 400
    line-height 42px
    text-transform uppercase

    strong
      font-weight 700

  &__buttons
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top 20px

  &__services
  &__partner
    background-color $cor03
    color white
    font-size 18px
    font-weight 400
    line-height 40px
    text-decoration none
    padding-bottom 3px
    width 195px
    text-align center
    transition all 150ms ease-in-out

    &:hover
      background-color $cor04

  &__partner
    background-color $cor01

    &:hover
      background-color $cor02
