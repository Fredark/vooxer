.wrapper-container
  padding-top 253px

  body:not(.cms-home) &
    padding-top 288px

.header-container
  background-color white
  box-shadow none
  left 0
  top 0
  position fixed
  width 100%

  &:after
    background-color rgba(0, 0, 0, .7)
    content ''
    left 0
    height 100%
    top 0
    transition all 150ms ease-in-out
    opacity 0
    visibility hidden
    position fixed
    width 100%
    z-index -1

  &.mask--on:after
    opacity 1
    visibility visible
    z-index 200


.header
  background-color white
  box-shadow none
  display block
  padding 0
  position relative
  z-index 300

.header-lane
  background-color white
  border-bottom 1px solid #ebebeb
  position relative
  z-index 400

  body.moving--down &
    border-color $cor01
    box-shadow 0 0 3px rgba(0, 0, 0, .2)

.header-lane__center
  align-items center
  display flex

.logo
  display none

.logo-svg
  flex 0 0 180px
  margin 0 83px 0 0
  transition all 150ms ease-in-out

  body.moving &
    flex 0 0 120px
    margin 5px 30px 5px 0

  a
    display block

  svg
    height 111px
    width 100%
    transition all 150ms ease-in-out

    body.moving &
      height 77px


.header-lane__right
  flex 1 1 auto

.header-lane__top
  align-items center
  border-bottom 1px dashed #363636
  display flex
  height 60px
  justify-content space-between
  overflow hidden
  transition all 150ms ease-in-out

  body.moving &
    border 0 none
    height 0

.header
  .loginout
    align-items center
    display flex
    justify-content space-between
    flex 2 1 auto

  .search
    border 1px solid #e1e1e1
    margin 0
    transition all 150ms ease-in-out

    &:hover
      border-color $cor01

    &.search--on
      border-color $cor01

      .search__label
        border-color $cor01

.icon--user
  &:before
    content svg-inline(user)
    margin-right 13px

.welcome-message
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.welcome-message__name
  color $cor01
  font-weight 500

.user-links
.user-links__link
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.user-links__link
  &:hover
    text-decoration underline

.user-links__link--first
  margin-right 4px

.user-links__link--second
  margin-left 4px

.phones
  flex 2 1 auto
  justify-content flex-end

.phones
.phones__item
  color #999
  font-size 14px
  font-weight 400
  letter-spacing .5px

.phones__item
  font-size 15px
  margin-left 4px

.header-lane__bottom
  align-items center
  display flex
  padding 20px 0

.icon--phone
  &:before
    content svg-inline(phone)
    margin-right 15px

.search__label
  border-right 1px solid #e3e3e3
  color $cor01
  font-size 13px
  font-weight 500
  letter-spacing .3px
  line-height 25px
  margin 0
  text-align center
  text-transform lowercase
  transition all 150ms ease-in-out
  width 70px

.search
  .search__input
    border 0 none
    box-shadow none
    border-radius 0
    color #999
    font-size 13px
    font-weight 400
    height 38px
    letter-spacing .3px
    line-height 18px
    padding 10px 20px
    transition all 150ms ease-in-out

    &:focus
      color #666

    &::placeholder
      color #999
      font-size 13px
      font-weight 400
      letter-spacing .3px
      line-height 18px

.search__button
  background-color transparent
  border 0 none
  border-radius 0
  box-shadow none
  line-height 1
  padding 0
  text-align center
  width 43px

  &:hover
    background-color transparent
    border 0 none

  span
    display inline-block

.icon--search
  &:before
    content svg-inline(search)

.search__filter
  display none

.header
  .mycart
    height auto

.icon--cart
  &:before
    content svg-inline(cart)
    margin-right 15px

.cart__info
  color #212121
  font-size 15px
  font-weight 500
  letter-spacing .29px
  transition all 150ms ease-in-out

.header
  .mycart
    margin -9px -18px 0 0

.mycart
  position relative

  &.mycart--empty
    .mycart__content
      display none

  &:hover
    .cart__info
      color $cor01

    &:not(.mycart--empty)
      .mycart__header
        a
          box-shadow 0 2px 6px 0 rgba(34, 31, 31, .29)

      .mycart__content
        display flex

    .mycart__content
      opacity 1
      visibility visible
      z-index 300

  .mycart__content
    align-items center
    border 0 none
    box-shadow 0 2px 6px 0 rgba(34, 31, 31, .29)
    display flex
    flex-flow row wrap
    justify-content space-between
    padding 15px
    opacity 0
    right 0
    visibility hidden
    transition all 150ms ease-in-out
    position absolute
    z-index -1
    width 405px

    .title
      display none

.mycart__list
  flex 0 0 100%
  margin 0 0 15px
  order 0
  padding 0

.mycart__details
  align-items center
  display flex

  .price
    color $cor01
    font-size 14px
    font-weight 700
    flex 0 0 auto
    letter-spacing .1px
    margin-left 15px

.mycart__qtd
  display none

.mycart__name
  margin 0

  span
    color #959595
    display block
    font-size 11px
    font-weight 500
    letter-spacing .3px
    line-height 14px
    max-height 42px
    overflow hidden
    text-transform uppercase
    transition all 150ms ease-in-out

    &:hover
      color $cor01

.mycart__header
  position relative
  z-index 400
  a
    background-color white
    padding 16px 18px 7px 20px
    position relative
    transition all 150ms ease-in-out

    &:after
      background-color white
      bottom -8px
      content ''
      height 15px
      left 0
      position absolute
      transition all 150ms ease-in-out
      width 100%
      z-index 100

.mycart__item
  border 1px solid #ebebeb
  margin-bottom 10px
  padding 10px 25px 10px 10px
  transition all 150ms ease-in-out

  &:hover
    border-color $cor01

  &:last-child
    margin-bottom 0

  .truncated
    display none

.mycart__thumb
  align-items center
  display flex
  height 60px
  justify-content center
  width 60px

  img
    height auto
    max-height 100%
    max-width 100%
    width auto

.mycart__remove
  background-color transparent
  border 0 none
  border-radius 0
  left auto
  line-height 0
  padding 0
  right 8px
  top 8px

  &:hover
    background-color transparent
    border 0 none

    &:before
      content svg-inline(close-hover)

  &:before
    content svg-inline(close)
    display block

.mycart__actions
  border 0 none
  flex 0 0 auto
  margin 0
  order 1

  .editar
    display none

  .finalizar
    background $cor01
    border 1px solid transparent
    display block
    font-size 0
    line-height 0
    flex 0 0 auto
    height 40px
    padding 11px 17px
    transition all 150ms ease-in-out

    &:hover
      background-color white
      border-color $cor01

      &:before
        color $cor01

    &:before
      content 'Ir para o carrinho'
      color white
      display block
      font-size 13px
      font-weight 500
      line-height 16px
      letter-spacing .5px
      text-align center
      text-transform uppercase
      transition all 150ms ease-in-out

.mycart__totals
  flex 0 0 auto
  order 2

  .label
    font-size 0
    line-height 0

    &:before
      content 'Subtotal: '

  .price
  .label:before
    color black
    content 'Subtotal: '
    font-size 14px
    font-weight 600
    letter-spacing .5px
    line-height 1
    text-transform uppercase

  .price-box-parcelado
    display none


.ruler-lane
  background-color white
  margin 0
  position relative
  transition all 150ms ease-in-out
  z-index 300

  body.moving &
    margin-top -48px

  body.moving--down &
    margin-top -118px

.ruler-list
  align-items center
  display flex
  height 48px

.ruler-list__item
  align-items center
  display flex
  flex 1 1 auto

  &:last-child
    flex 0 0 auto

  [class*="icon--"]
    &:before
      margin-right 7px

.ruler-list__title
  color $cor01
  font-size 12px
  font-weight 600
  letter-spacing .5px
  margin-right 10px
  text-transform uppercase
  white-space nowrap

.ruler-list__desc
  .std
  .std p
  .std a
    color #9e9e9e
    font-size 11px
    font-weight 500
    letter-spacing .19px
    line-height 14px
    transition all 150ms ease-in-out

  .std a

    &:hover
      color $cor01

    &:after
      display none


.icon--shipping
  &:before
    content svg-inline(shipping)

.icon--cards
  &:before
    content svg-inline(cards)

.icon--safe
  &:before
    content svg-inline(safe)

.icon--whatsapp
  &:before
    content svg-inline(whatsapp)


.menu-lane
  background-color $cor01
  box-shadow 0 3px 4px 0 rgba(34, 31, 31, .2)
  position relative
  z-index 200

.header-container .categories:not(.categories--mini)
  margin 0
  padding 0

.categories
  background-color transparent

  .li--0
    border-right 1px solid $cor02

    &:first-child
      border-left 1px solid $cor02

    &:hover
      .a--0
        background-color white

        span
          color $cor01

  .a--0
    align-items center
    background-color $cor01
    display flex
    flex-flow column nowrap
    height 62px
    justify-content center
    transition all 150ms ease-in-out

    span
      flex 0 0 auto

    &:before
      flex 0 0 auto
      height 23px
      margin-bottom 6px

    &.cama:before
      content svg-inline(cama)

    &.mesa:before
      content svg-inline(mesa)

    &.banho:before
      content svg-inline(banho)

    &.infantil:before
      content svg-inline(infantil)

    &.personagens:before
      content svg-inline(personagens)

    &.decorac-o:before
      content svg-inline(decoracao)

    &.utensilios:before
      content svg-inline(utilidades-domesticas)

    &.vendas-no-atacado:before
      content svg-inline(vendas-no-atacado)

    span
      color white
      font-size 13px
      font-weight 500
      letter-spacing .5px
      text-transform uppercase
      transition all 150ms ease-in-out

.categories--justify
  position relative

  .categories__all.li--0
    flex 0 0 70px

    &:hover
      .icon--menu:before
        content: svg-inline(menu2)

      .box--1
        left 1px !important
        height auto
        max-height none
        padding 0
        right 1px !important

      .all-ul--1
        display none

      .all-ul--0
        column-count 4
        display block
        height auto
        max-height none
        padding 24px 40px 30px
        width 100%

      .all-li--0
        display inline-block
        padding 0

        &:nth-child(5n)
          border-color #ebebeb

          &:hover
            border-color $cor01

  .li--0
    position static

    .box--1
      align-items flex-start
      background-color white
      border 0 none
      box-shadow none
      display flex
      height auto
      left 70px
      right 1px
      padding 0

      .ul--1
        align-items flex-start
        display flex
        flex 1 1 auto
        flex-flow column wrap
        height 100%
        justify-content flex-start
        margin 0 40px
        max-height 304px
        overflow auto
        order 1
        padding 24px 0 10px 8px
        width 100%

      .li--1
      .all-li--0
        border-bottom 1px solid #ebebeb
        flex 0 0 auto
        margin-right 50px
        width 190px

        &:nth-child(5n)
        &:nth-child(5n):hover
          border-color transparent

        &:hover
          border-color $cor01

          .a--1
          .all-a--0
            span
              color $cor01
              padding-left 10px

      .a--1
      .all-a--0
        padding 0

        span
          color #959595
          display block
          font-size 13px
          font-weight 500
          letter-spacing .5px
          line-height 15px
          padding 17px 0
          text-align left
          text-transform uppercase
          transition all 150ms ease-in-out

  .a--0
    align-items center
    display flex


.categories__block
  border 0 none
  flex 0 0 auto
  margin 0
  order 0
  padding 0

.icon--menu
  &:before
    content svg-inline(menu)
    transition all 150ms ease-in-out

.header-lane__mobile
  display none