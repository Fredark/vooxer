
.banners-list
  align-items flex-start
  display flex
  flex-wrap wrap
  margin 0 -10px

  &__item
    line-height 0
    margin 10px
    flex 1 1 400px
    position relative
    transition all 150ms ease-in-out

    &:hover
      box-shadow 0 0 10px 0 rgba(0, 0, 0, .8)

      .banners-list__info
        bottom 25px

    img
      max-width 100%

  &__info
    position absolute
    bottom 20px
    left 15px
    width auto
    z-index 50
    max-width 340px
    transition all 150ms ease-in-out

  &__title
    color white
    display block
    font-size 20px
    line-height 1
    font-weight 700
    margin-bottom 5px

  &__desc
    color white
    display block
    font-size 15px
    font-weight 300
    line-height 20px

.about-us
  background-color #efefef

  &__center
    padding 30px 0 60px

  &__title
    color #444444
    font-size 30px
    font-weight 700
    letter-spacing -.25px
    line-height 1
    margin-bottom 20px
    text-align center

  &__desc
    color #767676
    font-size 15px
    line-height 20px
    letter-spacing -.25px
    text-align center

.about-list
  display flex
  flex-wrap wrap
  justify-content center
  margin-top 50px

  &__item
    align-items center
    display flex
    margin-right 50px

    &:last-child
      margin-right 0

  &__number
    color #444444
    display block
    font-size 25px
    font-weight 500
    letter-spacing -.25px

  &__name
    color #444444
    font-size 15px
    font-weight 300
    letter-spacing -.25px

  &__icon
    height auto
    width 45px

  &__info
    border-left 1px solid #b3b3b3
    margin-left 15px
    padding-left 15px

.budget
  background url('/img/banner-orcamento.jpg') no-repeat center bottom
  background-size 100%
  background-attachment fixed

  &__center
    align-items center
    display flex
    flex-wrap wrap
    height 80vh
    justify-content space-between
    padding 0 50px

  &__logo
    width 322px
    max-width 100%

  &__title
    color white
    display block
    font-size 30px
    font-weight 700
    letter-spacing -.25px
    margin-bottom 10px
    text-transform uppercase

  &__desc
    color white
    font-size 18px
    font-weight 400
    line-height 22px
    letter-spacing -.25px
    max-width 420px
    margin-bottom 15px

  &__link
    background-color white
    border-radius 3px
    display block
    color #1e1f26
    font-size 15px
    font-weight 700
    line-height 40px
    text-transform uppercase
    text-decoration none
    width 288px
    text-align center
