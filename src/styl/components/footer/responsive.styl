@media (max-width 1200px)
  .newsletter-lane__center
    margin 0
    width 100%

  .newsletter__banner
    max-width 100%
    flex 0 0 100%

  .newsletter__info
    border-left 1px solid #e1e1e1
    border-top 0 none

  .newsletter
    width 100%

  .newsletter__form
    margin 0
    max-width none

  .footer .newsletter-lane .newsletter
    padding 10px
    border-radius 0

  .newsletter__name
    margin-bottom 0

  .newsletter__form .input-text
    font-size 13px
    height 38px
    padding 10px 15px

  .newsletter
    .female-label
    .male-label
      font-size 13px
      line-height 40px

  .newsletter__email
    margin-bottom 10px

  .icon--logo:before
    display none

  .wrapper section.newsletter
    marign-bottom 45px

  .about-us__title
    font-size 23px

  .about-us__desc .std
    font-size 12px
    line-height 19px

    p
      margin-bottom 10px


  .footer-menu
    margin-bottom 30px

    &:last-child
      margin-bottom 0

  .menus-lane__center
    padding 20px 0 0

  .footer
    margin 0
    padding 0


  .footer-menu__title
    font-size 13px
    margin-bottom 10px

  .mymenu .a--0
    font-size 11px

  .pays__list, .ships__list, .certs__list
    justify-content flex-start

  .contact-lane__center
    padding 20px 0
    width 100%

  .contact-list__item
    margin-bottom 10px

    &:before
      transform scale(.8)
      margin 0 5px 0 0
      width 35px

    &:last-child
      margin-bottom 0

  .contact-list__title
  .contact-list__desc a
  .contact-list__desc p
    font-size 11px

  .contact-list__desc a[href*=mailto]
  .contact-list__desc p[href*=mailto]
    font-size 11px

  .copyright-lane__center
    flex-wrap wrap
    justify-content center
    padding 20px

    >*
      max-width 100%
      margin-bottom 20px

      &:last-child
        margin-bottom 0

    &:before
      margin-bottom 20px

  .copyright .std, .copyright .std p
    font-size 11px
    line-height 17px
    text-align center

  .certs__list
    justify-content center

  .newsletter__form
    flex-wrap wrap

  .newsletter__text
    flex 1 1 auto
    line-height 1.2
    text-align center
    margin-bottom 10px

  .newsletter__email
    flex 1 1 150px
    margin-bottom 0
    min-width 0

  .newsletter__submit
    flex 0 0 auto

  .wrapper .newsletter-lane
    margin 0

  .wrapper .copyright-lane
    margin 0 -15px
    width calc(100% + 30px)

  .copyright-lane__center
    width 100%
