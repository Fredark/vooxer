.icon--tag
  &:before
    content svg-inline(tag)

.main .col-main .products
  margin-bottom 35px

.products__title
  margin-bottom 25px

.showcase__title
  display block
  text-align center

.showcase__title
  background-color #01b8e3
  color white
  font-size 14px
  font-weight 700
  line-height 56px
  margin-bottom 0
  text-align center
  max-width 270px
  padding-right 60px
  text-transform uppercase


.products__list
  margin 0 -15px

.main-container
  .product__main
    text-align center

.products__item
  flex 1 1 200px
  margin-bottom 20px
  padding 0 15px

.product__image
  height auto
  padding 0


.products__case
  align-items center
  box-shadow none
  height 500px
  justify-content center
  padding 10px
  transition all 150ms ease-in-out

  .main-container &
    height 500px


.product__name
  color #393939
  display block
  font-size 14px
  font-weight 700
  flex 0 0 auto
  line-height 18px
  height 36px
  margin 0 0 30px
  text-align center
  text-transform uppercase
  overflow hidden

.price-box
  order 0

  .main-container &
    display flex
    flex-flow column nowrap
    height 53px
    justify-content flex-end
    margin-bottom 30px
    align-items center

  .old-price
    color #959595
    font-size 14px
    font-weight 600
    margin-bottom 5px !important
    text-decoration line-through

    .label
      text-transform lowercase

  .special-price
  .regular-price
  .minimal-price


    .label span
      color $cor01
      font-size 18px
      font-weight 400
      text-transform lowercase

    .price span
      color $cor01
      font-size 24px
      font-weight 600

.price-box-parcelado
  margin 0
  text-align center

  .upto
  .s-juros
  .juros
    display none

  span
    color #959595
    font-size 14px
    font-weight 400

  .num
  .value
    span
      color $cor01 !important
      font-weight 500

.preco-parcelado-sem-juros
.preco-parcelado
  display block



.preco-parcelado-sem-juros + .preco-parcelado
  display none

.price-box-avista
  display block
  flex-wrap nowrap
  margin 0 0 3px

  .main-container &
    text-align center

  span
    color #959595
    font-size 14px

  .price span
    color $cor01
    font-weight 600

  .label
    margin 0

.product__prices
  display flex
  flex-wrap wrap
  justify-content center

  > *
    flex 0 0 100%

  .btn-cart
    order 10
    background $cor02
    border-radius 3px
    color white
    font-size 14px
    font-weight 400
    letter-spacing 0
    height 33px
    width 105px
    padding 0
    flex 0 0 auto

.price-box-avista
  span
    display inline-block

.carrossel .products__item
  margin-bottom 0
  padding 28px 15px

.owl-carousel
  .owl-wrapper-outer
    margin 0 -10px
    width calc(100% + 20px)

  .owl-wrapper
    padding-left 10px


.owl-prev
.owl-next
  border 0 none
  border-radius 50%
  background #02afdc
  height 20px
  box-shadow none
  position relative
  top auto
  left auto
  right auto
  transform none
  transition all 150ms ease-in-out
  width 20px

  &:hover
    background-color white

    &:before
      color #02afdc

  &:before
    color white
    font-size 8px
    line-height 20px

.owl-next
  margin-left 5px

.owl-buttons
  border 0 none
  overflow hidden
  border-radius 10px
  position absolute
  top -39px
  right auto
  left 205px
  height auto
  display flex
  align-items stretch

.owl-pagination
  display none

.tier-price
  display none

.products__case
  padding 15px 0 0

  .main-container &
    transition all 150ms ease-in-out

.product-rate
  display none

.products__title
  background-color #06c2ee
  margin-bottom 0

.price-box-avista .price
  font-weight 900


.showcase-timer
  margin-top 30px

.showcase-timer__title
  color $cor01
  display block
  font-size 12px
  font-weight 400
  text-transform uppercase
  text-align center
  margin-bottom 15px

.showcase-timer__list
  display flex
  justify-content center

.showcase-timer__item
  margin-right 18px
  position relative

  &:after
    color $cor01
    content ':'
    font-size 18px
    font-weight 700
    line-height 1
    position absolute
    left 55px
    top 15px

  &:last-child
    margin-right 0

    &:after
      display none

.showcase-timer__value
  background-color $cor01
  color white
  font-size 18px
  font-weight 700
  line-height 49px
  text-align center
  display block
  height 48px
  width 48px

.showcase-timer__label
  color $cor01
  display block
  font-size 11px
  font-weight 400
  text-transform uppercase
  text-align center
  margin-top 10px
