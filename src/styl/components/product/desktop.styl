.price-floater
  background-color white
  border 1px solid #ebebeb
  border-right 0 none
  box-shadow 4px 4px 5px 0 rgba(0, 0, 0, .18)
  opacity 0
  padding 16px
  position fixed
  right 0
  top 50%
  transform translateY(-50%)
  transition all 150ms ease-in-out
  visibility hidden
  width 251px
  z-index -1

  .price-box
    margin 0 0 5px

    .old-price
      margin-bottom 5px !important

  .regular-price
  .special-price
    .price span
      font-size 27px
      font-weight 700

  .price-box-parcelado
    margin-bottom 15px

  .add-to-cart
    margin 15px 0 0

  .add-to-cart-btn
    font-size 16px

    span
      display none

    &:before
      content 'Comprar'
      display block
      line-height 15px

.price-floater--on
  opacity 1
  visibility visible
  z-index 200

.price-floater--closed
  opacity 1
  visibility visible
  z-index 200
  right -251px

  .price-floater__close
    &:hover
      &:before
        color $cor01
        content: "\f053";
        font-family: "biz_icons",sans-serif;

    &:before
      color white
      content: "\f053";
      font-family: "biz_icons",sans-serif;
      speak: none;
      font-style: normal;
      font-weight: normal;
      font-variant: normal;
      font-size 13px
      line-height 1




.price-floater__close
