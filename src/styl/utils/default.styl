body,
html
  font 400 100%/1 'Montserrat', sans-serif
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

.center
  display block
  margin 0 auto
  max-width 1140px
  width calc(100% - 30px)

.main
  @extend .center

.col-main
  padding 0

[class*="icon--"]
  align-items center
  display inline-flex

  &:before
    flex 0 0 auto

::-webkit-scrollbar
  height 5px
  width 5px

::-webkit-scrollbar-track
  background-color #f7f7f7


::-webkit-scrollbar-thumb
  background-color $cor01

::-moz-selection
  background-color rgba(127, 203, 174, .8)
  color white


::selection
  background-color rgba(127, 203, 174, .8)
  color white